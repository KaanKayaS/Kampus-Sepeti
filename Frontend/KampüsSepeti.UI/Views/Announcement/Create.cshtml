@model KampüsSepeti.DTO.CreateAnnouncementDTO
@{
    ViewData["Title"] = "Duyuru Oluştur";
    Layout = "~/Views/Default/Index.cshtml";
}

<head>
    <link rel="stylesheet" href="~/KampüsSepetiFrontend/createannouncement.css">
</head>

<div class="container">
    <div class="create-announcement-box">
        <h2>Yeni Duyuru Oluştur</h2>
        
        <form asp-action="Create" method="post" class="announcement-form">
            <div class="form-group">
                <label asp-for="Title">Duyuru Başlığı</label>
                <input asp-for="Title" class="form-control" placeholder="Duyuru başlığını giriniz" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Duyuru Açıklaması</label>
                <textarea asp-for="Description" class="form-control" rows="4" 
                          placeholder="Duyuru detaylarını giriniz..." required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationId">Konum</label>
                <select asp-for="LocationId" class="form-control" required>
                    <option value="">Konum Seçin</option>
                    @if (ViewBag.Locations != null)
                    {
                        foreach (var location in ViewBag.Locations)
                        {
                            <option value="@location.Id">@location.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
            </div>

            <div class="button-group">
                <button type="submit" class="submit-btn">Duyuruyu Yayınla</button>
                <button type="button" class="cancel-btn" onclick="window.location.href='@Url.Action("Index", "Announcement")'">İptal</button>
            </div>
        </form>
    </div>
</div>

